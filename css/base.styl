            border: 1px solid #7bc1f7; 
            box-shadow: 0px 0px 8px #7bc1f7; 
    .formblock
      display inline-block
      margin: 0
      min-width: 200px
      overflow: hidden
      width: 100%
      &.ta
        width 100%
      label
        border-radius: 0.4em
        box-sizing border-box
        display: inline-block
        font-size: 16px
        margin 0.5%
        padding: 0.3em 0.2em
        width: 48%
      input 
        box-sizing: border-box
        display: inline-block
        font-size: 16px
        margin 0
        border: 1px solid #c4c4c4; 
        padding: 0.2em; 
        border-radius: 0.25em; 
        box-shadow: 0px 0px 8px #d9d9d9; 
        width: 48%
        &:focus
          outline: none; 
          border: 1px solid #7bc1f7; 
          box-shadow: 0px 0px 8px #7bc1f7; 
      select 
        box-sizing: border-box
        display: inline-block
        font-size: 16px
        margin 0
        border: 1px solid #c4c4c4; 
        padding: 0.2em; 
        border-radius: 0.25em; 
        box-shadow: 0px 0px 8px #d9d9d9; 
        width: 48%
        &:focus
          outline: none; 
          border: 1px solid #7bc1f7; 
          box-shadow: 0px 0px 8px #7bc1f7; 
      textarea
        width 100%
        box-sizing: border-box
        display: inline-block
        font-size: 16px
        margin 0
        border: 1px solid #c4c4c4; 
        padding: 0.2em; 
        border-radius: 0.25em; 
        box-shadow: 0px 0px 8px #d9d9d9;
        font-family: "Droid Serif",Arial;
        &:focus
          outline: none; 
          border: 1px solid #7bc1f7; 
          box-shadow: 0px 0px 8px #7bc1f7; 
    .formButtons
      bottom: 0
      box-sizing border-box
      overflow: hidden
      padding 0.2em 1em
      width: 100%
      
        &:hover 
          background: #3cb0fd;
          background-image: linear-gradient(to bottom, #3cb0fd, #3498db);
          text-decoration: none;
        &:active
          box-shadow 0.1em 0.1em 0 rgba(dgris,0.5) inset
.articulo
  border-radius 1em
  box-shadow 0.3em 0.3em 0.2em rgba(dgris,0.5)
  display inline-block
  margin 2%
  max-width 480px
  min-width 200px
  text-align left
  vertical-align top
  width 100%
  transition width 0.5s cubic-bezier(1,0,0.9,1)
  .imagen
    display inline-block
    vertical-align top
    width 33%
    img 
      width 100%
      box-sizing border-box

      
  .titulos
    display inline-block
    vertical-align top
    padding-top 10px
    width 65%
    hgroup
      padding-left 0.3em
      h4
      h6
        margin 0
        padding 0
    .resumen
      margin-top 0.5em
      padding 0 0.3em
      font-size 0.9em
    .fechas
      display:block
  .tags
    width 100%
    box-sizing border-box
    border-top 2px solid verde
    padding 0.4em
    font-size 10px
    ul
      list-style none
      margin 0
      padding 0
      li
        display inline-block
        a
          box-sizing border-box
          display inline-block
          padding 0.2em
          text-align center
          width 100%
          &:hover
            text-decoration underline
article.big
  width: 100%
  min-width: 100%
  max-width: 100%
  box-sizing: border-box
  .imagen
    width: 14%
  .titulos
    width: 84%
  .tags
    font-size 1em
  .resumen
    text-align justify
@keyframes rotateFall {
  0%    { transform: rotateZ(0deg); }
  20%   { transform: rotateZ(10deg); animation-timing-function: ease-out; }
  40%   { transform: rotateZ(17deg); }
  60%   { transform: rotateZ(16deg); }
  100%  { transform: translateY(100%) rotateZ(17deg); }
}

/* slide in from the bottom */
@keyframes slideOutLeft {
  to    { transform: translateY(-100%); }
}

/* rotate out newspaper */
@keyframes rotateOutNewspaper {
  to    { transform: translateZ(-3000px) rotateZ(360deg); opacity: 0; }
}

/* entering animations --------------------------------------- */
/* scale up */
@keyframes scaleUp {
  from  { opacity: 0.3; -webkit-transform: scale(0.8); }
}

/* slide in from the right */
@keyframes slideInRight {
  from  { transform:translateX(100%); }
  to    { transform: translateX(0); }
}

/* slide in from the bottom */
@keyframes slideInUp {
  from  { transform:translateY(100%); }
  to    { transform: translateY(0); }
}
.ng-enter        
  animation: slideInUp 0.5s both ease-in; z-index: 8888; 
.ng-leave       
  animation: slideOutLeft 0.5s both ease-in; z-index: 9999; 

@media only screen and (min-width: 1600px)
  form
    fieldset
      .formblock, .formdate
        width: 23%

  .container
    padding 0.5%
  .articulo
    width 24%
    box-sizing border-box
    margin 0.1%
@media only screen and (max-width: 1600px) and (min-width:1201px)
  form
    fieldset
      .formblock, .formdate
        width: 31%
  .container
    padding 0.5%
  .articulo
    width 32%
    box-sizing border-box
    margin 0.1%
@media only screen and (max-width: 1200px) and (min-width:769px)
  form
    fieldset
      .formblock, .formdate
        width: 48%
        box-sizing border-box

  .articulo
    width 49%
    box-sizing border-box
    margin 0.1%

