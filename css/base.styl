    display none
  .tabletFill
    width 100%
    padding 0
    margin 0
    box-sizing border-box
  .articulo
    width 48%
    box-sizing border-box
    margin 0.5%
  form
    fieldset
      .formblock, .formdate
        width:48%
        box-sizing border-box
        label
        input
        select
          width 100%
        .date
          width: 100%
@media only screen and (max-width: 480px) 
  .phoneHidden
    display none
  .phoneFill
    width 100%
    box-sizing border-box
  .container
    border none
  .articulo
    width 100%
    box-sizing border-box
    margin 1%
  nav 
    #pullMenu
      display block
    ul
      display none
      width 100%
      box-sizing border-box
      padding 0
      li
        padding 0
        margin 0
        width 49%
        box-sizing border-box
        a
          width 100%
          box-sizing border-box
    

  form
    fieldset
      .formblock, .formdate
        width:100%
        box-sizing border-box
        label
        input
        select
          width 100%
          box-sizing border-box
        .date
          width: 100%


