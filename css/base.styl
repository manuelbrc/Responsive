vendor-prefixes ?= webkit moz o ms official
@import 'nib'
@import 'nib/gradients'

dgris=#333
lgris=#ddd
gris=#888
azul=#1B9AF7 
verde=#0a7
rojo=#d00
naranja=#f99c19 
a
  text-decoration none
html
  background-color lgris
body
  background-color #fefefe
  box-shadow 0.2em 0.2em 0.2em rgba(dgris,0.7)
  color dgris
  font-family "Droid Serif",Arial
  font-size 16px
  margin: 0
header
  background-color azul
  overflow: hidden

  #logo
    border-right 1.5px solid verde
    float left
    width 110px
    img
      width 100px
  #titulo
    margin-left:120px
    h1
    h3
      margin 0
      padding 0
      text-shadow 0.6px 0.6px 0 rgba(lgris,0.5)
.border-around
  border:1px solid rgba(2,2,2,0.1);
  border-radius: 6px;
  vertical-align: text-bottom;
.btn-group
  display inline-block
nav
  background-color naranja
  box-shadow 0px 0.18em 0.5px rgba(dgris,0.5)
  #pullMenu
    cursor pointer
    display none
    i
      padding 0.5em
      &:hover
        background-color verde
        color white
        text-shadow none
        transform scale(1.05,1.05)
  ul
    margin: 0
    overflow: hidden
    padding-left 1em
    padding: 0
    text-align center
    li
      display: inline-block
      list-style: none
      a
        border-radius: 0.5em
        color dgris
        display: inline-block
        font-weight: bold
        padding 0.5em
        text-shadow: 0.6px 0.6px 0 rgba(lgris,0.5)
        transition: all 0.2s linear
        &:hover
          background-color verde
          color white
          text-shadow none
          transform scale(1.05,1.05)

footer
  background-color azul
  padding: 0.1em
  text-align: center
  h4
    text-shadow 0.6px 0.6px 0 rgba(lgris,0.5)
.container
.rightBar
  display: inline-block
  vertical-align: top
  margin: 0 auto
  padding: 2% 1%
.container
  border-right 2px solid verde
  text-align: left
  width: 85%
.rightBar
  width: 10%
.fixed 
  left: 0;
  position:fixed;
  top: 0;
  width: 100%;
button
  background: #3498db;
  background-image: linear-gradient(to bottom, #3498db, #2980b9);
  border-radius: 10px;
  box-shadow: 0px 1px 3px #666666;
  color: #fefefe;
  font-size: 1em;
  border-style none
  float right
  cursor:  pointer
  padding: 0.25em 0.5em 0.25em 0.5em;
  text-decoration: none;
form
  fieldset
    border none
    margin 0
    padding 0
    text-align left
    hgroup
      h3
      h5
        margin 0
        padding 0
    .formdate
      display inline-block
      margin: 0
      min-width: 200px
      overflow: hidden
      width: 100%
      display: inline-block
      label
        border-radius: 0.4em
        box-sizing border-box
        display: inline-block
        font-size: 16px
        margin 0.5%
        padding: 0.3em 0.2em
        width: 37%
      .date
        width: 62%
        box-sizing: border-box
        display: inline-block
        input[type="number"]
          width: 29%
          box-sizing: border-box
          display: inline-block
          font-size: 16px
          margin 0.5%
          border: 1px solid #c4c4c4; 
          padding: 0.2em; 
          border-radius: 0.25em; 
          box-shadow: 0px 0px 8px #d9d9d9; 
          text-align right
          &:focus
